{
  "name": "openmusic-api-v2",
  "version": "1.0.0",
  "description": "Dicoding Submission - OpenMusic API v2 (Hapi + Joi + PostgreSQL + node-pg-migrate)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon src/server.js",
    "migrate": "node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate",
    "migrate:up": "node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate up",
    "migrate:down": "node -r dotenv/config ./node_modules/node-pg-migrate/bin/node-pg-migrate down"
  },
  "keywords": [
    "dicoding",
    "hapi",
    "postgresql",
    "openmusic"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.12",
    "@hapi/jwt": "^3.2.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "nanoid": "^3.3.7",
    "pg": "^8.12.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.4"
  }
}